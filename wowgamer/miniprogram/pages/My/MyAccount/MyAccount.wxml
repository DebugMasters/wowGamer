<view class="cu-card case" wx:for="{{CharactorList}}" wx:key>
  <view class="cu-item shadow margin-tb-xl" bindtap="navToCaracterEntry" data-characterid="{{item.characterId}}">
    <view class="bg-img bg-mask flex align-center" style="background-image: url('https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg');height: 400rpx;">
      <view bindtap="deleteCharacter" class="cu-tag bg-red" data-characterid="{{item.characterId}}">删除</view>
      <cover-view class="padding-xl text-white">
        <cover-view class="text-bold">
          名称：{{item.characterName}}
        </cover-view>
        <cover-view>
          阵营：{{item.allienceHorde}}
        </cover-view>
        <cover-view>
          大区/服务器：{{item.characterRealm}}
        </cover-view>
      </cover-view>
    </view>
  </view>
</view>
    

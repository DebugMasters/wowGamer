<cu-navbar bgColor="" isBack="true"></cu-navbar>

<view class="cu-bar bg-white margin-top shadow fixed" style="top:{{CustomBar}}px;">
  <view class="action">
    <text class="text-black">订单收支</text>
    <text class="icon-triangledownfill margin-left-xs"></text>
  </view>
  <view class="action">
    <text class="text-black">订单类型</text>
    <text class="icon-triangledownfill margin-left-xs"></text>
  </view>
  <view class="action">
    <text class="text-black">订单状态</text>
    <text class="icon-triangledownfill margin-left-xs"></text>
  </view>
</view>

<view style="height: 130rpx;"/>
<view class="cu-list menu-avatar">
  <view class="cu-item {{modalName=='move-box-'+ index?'move-cur':''}}" wx:for="{{orderList}}" wx:key bindtouchstart="ListTouchStart" bindtouchmove="ListTouchMove" bindtouchend="ListTouchEnd" data-orderid="{{item.orderId}}" bindtap="NavToOrderEntry">
    <view class="cu-avatar round lg" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big2100{{index+1}}.jpg);"></view>
    <view class="content">
      <view class="text-grey">{{item.accountId}}({{item.accountName}})</view>
      <view class="text-gray text-sm">
        <text class="cuIcon-infofill text-red"></text>{{item.note}}</view>
    </view>
    <view class="action" style="width: 150rpx;">
      <view class="text-grey text-xs">{{item.createTime}}</view>
      <view class="cu-tag round bg-grey sm">¥{{item.orderMoney}}</view>
    </view>
    <view class="move">
      <view class="bg-grey">置顶</view>
      <view class="bg-red">删除</view>
    </view>
  </view>
</view>
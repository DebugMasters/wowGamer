<view class="bg-img bg-mask padding" style="background-image: url('https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg');height: 230rpx;">
    <view class="flex-sub text-center">
      <view class="solid-bottom text-xl padding">
        <text class="text-yellow">今日订单总量</text>
      </view>
      <view class="text-xxl">
        <text class="text-yellow text-bold">117</text>
      </view>
    </view>
</view>

<scroll-view scroll-x class="bg-white nav text-center">
  <view class="cu-item 'text-black cur'" data-id="1">
    正式服
  </view>
  <view class="cu-item 'text-black'" data-id="2">
    怀旧服
  </view>
</scroll-view>

<form>
<view class="cu-list menu 'card-menu margin-top'">
	<view class="cu-form-group margin-top">
		<view class="title">订单类型</view>
		<picker bindchange="PickerChange" value="{{index}}" range="{{OrderTypes}}">
			<view class="picker">
				{{OrderTypes[index]}}
			</view>
		</picker>
	</view>
	<view class="cu-form-group">
		<view class="title">选择内容</view>
		<picker bindchange="PickerChange" value="{{index}}" range="{{SelectedContent}}">
			<view class="picker">
				{{SelectedContent[index]}}
			</view>
		</picker>
	</view>
	<view class="cu-form-group">
		<view class="title">拾取模式</view>
		<picker bindchange="PickerChange" value="{{index}}" range="{{PickMode}}">
			<view class="picker">
				{{PickMode[index]}}
			</view>
		</picker>
	</view>
	<view class="cu-form-group">
		<view class="title">选择角色</view>
		<picker bindchange="PickerChange" value="{{index}}" range="{{SelectP}}">
			<view class="picker">
				{{SelectP[index]}}
			</view>
		</picker>
	</view>
</view>
</form>


<view class="flex solid-bottom padding justify-center">
  <button class="cu-btn bg-grey lg" bindtap='NavToCreateOrder'>立即下单</button>
</view>